<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.nathalie.nathalieborst_pset5.OrderFragment"
    android:background="@color/colorAccent">

    <TextView
        android:id="@+id/yourOrdertv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="6dp"
        android:text="Your Order"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textColor="#fff"/>

    <ListView
        android:id="@+id/orderlv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp" >

    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/linetv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="    ______________________________________"
            android:textColor="@android:color/white"/>
    </LinearLayout>

    <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


        <TextView
            android:id="@+id/orderTotaltv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order total:"
            android:textColor="@android:color/white"
            android:layout_marginStart="15dp"
            android:textSize="14dp"
            />

        <TextView
            android:id="@+id/eurosign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â‚¬"
            android:textColor="@android:color/white"
            android:layout_marginStart="155dp"
            android:textSize="14dp"
            />

        <TextView
            android:id="@+id/priceTotaltv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@android:color/white"
            android:layout_marginStart="3dp"
            android:textSize="14dp"/>


    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp">

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="cancel"
            android:background="@android:color/transparent"
            android:layout_marginStart="2dp"
            android:layout_gravity="start"
            android:textColor="@android:color/white"/>

        <Button
            android:id="@+id/placeOrderButton"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="end"
            android:layout_marginEnd="11dp"
            android:background="@android:color/transparent"
            android:text="place order"
            android:textColor="@android:color/white" />

    </RelativeLayout>

</LinearLayout>
